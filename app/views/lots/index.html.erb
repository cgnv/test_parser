<p id="notice"><%= notice %></p>

<h1>Lots</h1>

<table>
  <thead>
    <tr>
      <th>Purchase</th>
      <th>Guid</th>
      <th>Ordinalnumber</th>
      <th>Subject</th>
      <th>Initialsum</th>
      <th>Deliveryplace</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.purchase %></td>
        <td><%= lot.guid %></td>
        <td><%= lot.ordinalNumber %></td>
        <td><%= lot.subject %></td>
        <td><%= lot.initialSum %></td>
        <td><%= lot.deliveryPlace %></td>
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

